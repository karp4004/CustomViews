<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.okarpov.customviews.MainActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/journeyFrame"
            android:background="#e1e1e1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.okarpov.customviews.CustomScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollView">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/journeyList"></LinearLayout>

                </com.example.okarpov.customviews.CustomScrollView>

            </FrameLayout>

        </LinearLayout>

        <SeekBar
            android:layout_width="@dimen/speed3"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:max="100"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/speed10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_centerInParent="true"
            android:textSize="@dimen/size2"
            android:text="0"
            android:layout_gravity="center" />

        <com.example.okarpov.customviews.SpeedView
            android:layout_width="@dimen/speed3"
            android:layout_height="@dimen/speed3"
            android:id="@+id/speedView"
            android:layout_centerInParent="true">

        </com.example.okarpov.customviews.SpeedView>
    </FrameLayout>
    <![CDATA[



    >


]]>
</RelativeLayout>
